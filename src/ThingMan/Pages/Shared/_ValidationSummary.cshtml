@if (ViewContext.ModelState.IsValid == false)
{
    <div class="mt-4 rounded-md bg-red-50 shadow-md p-4">
        <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Error</h3>
            <div asp-validation-summary="All" class="mt-2 text-sm text-red-700"></div>
        </div>
    </div>
}