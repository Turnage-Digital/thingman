@page
@model Login

<div class="flex flex-col h-full py-12 sm:px-6">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-medium">Log in to your account</h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="px-4 py-8 bg-white shadow-md sm:rounded-lg sm:px-10">
            <form asp-page="/Account/Login" class="space-y-6">
                <div>
                    <label asp-for="Input.Username" class="font-medium">Username</label>
                    <div class="mt-1">
                        <input asp-for="Input.Username" type="text" class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm" autocomplete="username" required autofocus>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Password" class="font-medium">Password</label>
                    <div class="mt-1">
                        <input asp-for="Input.Password" type="password" class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm" autocomplete="current-password" required>
                    </div>
                </div>

                <div>
                    <button type="submit" class="w-full rounded-md bg-sky-500 p-2 font-medium text-white shadow-sm hover:bg-sky-600">Log in</button>
                </div>

                @* <div> *@
                @*     <a asp-page="/Account/ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-sky-500 hover:text-sky-600"> *@
                @*         Forgot your password? *@
                @*     </a> *@
                @* </div> *@

                <input type="hidden" asp-for="ReturnUrl"/>
            </form>
        </div>

        <partial name="_ValidationSummary"/>
    </div>
</div>